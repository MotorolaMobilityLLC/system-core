// Build the unit tests.

cc_test {
    name: "libutils_tests",

    srcs: [
        "BlobCache_test.cpp",
        "BitSet_test.cpp",
        "Looper_test.cpp",
        "LruCache_test.cpp",
        "String8_test.cpp",
        "StrongPointer_test.cpp",
