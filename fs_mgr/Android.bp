cc_defaults {
    name: "fs_mgr_defaults",
    sanitize: {
        misc_undefined: ["integer"],
    },
    local_include_dirs: ["include/"],
    cppflags: ["-Werror"],
    static_libs: [
        "libfec",
        "libfec_rs",
        "libbase",
        "libcrypto_utils",
        "libcrypto",
        "libext4_utils",
        "libsquashfs_utils",
        "libselinux",
        "libavb",
    ],
    whole_static_libs: [
        "liblogwrap",
    ],
}

cc_library_static {
    name: "libfs_mgr",
    defaults: ["fs_mgr_defaults"],
    export_include_dirs: ["include"],
    include_dirs: ["system/vold"],
    srcs: [
        "fs_mgr.cpp",
        "fs_mgr_dm_ioctl.cpp",
        "fs_mgr_format.cpp",
        "fs_mgr_fstab.cpp",
        "fs_mgr_slotselect.cpp",
        "fs_mgr_verity.cpp",
        "fs_mgr_avb.cpp",
        "fs_mgr_avb_ops.cpp",
        "fs_mgr_boot_config.cpp",
    ],
    product_variables: {
        debuggable: {
            cppflags: ["-DALLOW_ADBD_DISABLE_VERITY=1"],
        },
        eng: {
            cppflags: ["-DALLOW_SKIP_SECURE_CHECK=1"],
        },
    },
}
