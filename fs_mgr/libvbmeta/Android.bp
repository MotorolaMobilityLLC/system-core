package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

libvbmeta_lib_deps = [
    "libbase",
    "libcrypto",
]

cc_library {
    name: "libvbmeta",
    host_supported: true,
    srcs: [
        "builder.cpp",
        "reader.cpp",
        "utility.cpp",
        "writer.cpp",
    ],
    shared_libs: [
        "liblog",
    ] + libvbmeta_lib_deps,
    export_include_dirs: ["include"],
}

cc_test_host {
    name: "libvbmeta_test",
    static_libs: [
        "liblog",
        "libsparse",
        "libvbmeta",
        "libz",
    ] + libvbmeta_lib_deps,
    srcs: [
        "builder_test.cpp",
        "super_vbmeta_test.cpp",
    ],
    required: [
        "avbtool",
        "vbmake",
    ],
    data: [
        "data/*",
    ],
    // Not unit tests due to several binary and lib dependencies currently hard to replicate in continuous execution
    test_options: {
        unit_test: false,
    },
}
